<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.teachcoder.app.userInterface1.layouts.LinearLayoutActivity"
    android:weightSum="1">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Layout Horizontal Layout"
        android:id="@+id/linearLayoutHorbtn"
        android:layout_gravity="center_horizontal"
        android:onClick="linearLayoutHorBtnPressed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Layout Vertical Layout"
        android:id="@+id/linearLayoutVererbtn"
        android:layout_gravity="center_horizontal"
        android:onClick="linearLayoutVerBtnPressed"/>





</LinearLayout>
